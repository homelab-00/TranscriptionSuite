{
  "name": "transcriptionsuite",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "node scripts/dev-electron.mjs",
    "build": "vite build",
    "typecheck": "tsc --noEmit && tsc -p electron/tsconfig.json --noEmit",
    "build:electron": "npm run build && tsc -p electron/tsconfig.json",
    "preview": "vite preview",
    "package:linux": "npm run build:electron && electron-builder --linux AppImage",
    "package:windows": "npm run build:electron && electron-builder --win nsis",
    "ui:contract:extract": "node scripts/ui-contract/extract-facts.mjs",
    "ui:contract:build": "node scripts/ui-contract/build-contract.mjs",
    "ui:contract:validate": "node scripts/ui-contract/validate-contract.mjs",
    "ui:contract:check": "npm run ui:contract:validate && npm run ui:contract:test",
    "ui:contract:diff": "node scripts/ui-contract/diff-contract.mjs",
    "ui:contract:test": "node scripts/ui-contract/test-contract.mjs"
  },
  "dependencies": {
    "electron-store": "^10.0.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^5.0.0",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.21",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "yaml": "^2.8.1"
  },
  "build": {
    "appId": "com.transcriptionsuite.dashboard",
    "productName": "TranscriptionSuite",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../build/assets/tray-icon.png",
        "to": "tray-icon.png"
      },
      {
        "from": "../build/assets/tray-icon@1x.png",
        "to": "tray-icon@1x.png"
      },
      {
        "from": "../build/assets/tray-icon@2x.png",
        "to": "tray-icon@2x.png"
      }
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "../build/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "../build/assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
